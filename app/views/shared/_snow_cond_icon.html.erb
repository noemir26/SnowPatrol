<% case ski_resort.current_condition %>
<% when 'no_snow' %>
  <%= image_tag 'clear.svg', class: 'svg-icon-small nosnow', width: size, height: size %>
<% when 'slushy' %>
  <%= image_tag 'slush.svg', class: 'svg-icon-small nosnow', width: size, height: size %>
<% when 'icy' %>
  <%= image_tag 'icy.svg', class: 'svg-icon-small nosnow', width: size, height: size %>
<% when 'groomed_snow' %>
  <%= image_tag 'groomed.svg', class: 'svg-icon-small nosnow', width: size, height: size %>
<% when 'packed_powder' %>
  <%= image_tag 'packed.svg', class: 'svg-icon-small nosnow', width: size, height: size %>
<% when 'pow' %>
  <%= image_tag 'powder.svg', class: 'svg-icon-small nosnow', width: size, height: size %>
<% else %>
  <i class="fa-solid fa-circle-dot" style="color: #2d5c9e; font-size: <%= size %>"></i>
<% end %>
